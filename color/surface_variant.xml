<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default color (normal state) -->
    <item android:color="@color/on_surface_variant" />

    <!-- Disabled state (38% opacity) -->
    <item android:state_enabled="false" android:color="@color/on_surface_variant" android:alpha="0.38"/>

    <!-- Pressed state - slightly darker -->
    <item android:state_pressed="true" android:color="@color/on_surface_variant" android:alpha="0.8"/>

    <!-- Selected state - use primary color -->
    <item android:state_selected="true" android:color="?attr/colorPrimary"/>

    <!-- Activated state -->
    <item android:state_activated="true" android:color="?attr/colorPrimary"/>

    <!-- Checked state -->
    <item android:state_checked="true" android:color="?attr/colorPrimary"/>

    <!-- Hover state (for devices with pointer) -->
    <item android:state_hovered="true" android:color="@color/on_surface_variant" android:alpha="0.9"/>
</selector>
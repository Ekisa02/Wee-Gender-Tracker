<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default color (normal state) -->
    <item android:color="@color/on_surface" tools:ignore="ResourceCycle" />

    <!-- Disabled state -->
    <item android:state_enabled="false" android:color="@color/on_surface_variant" android:alpha="0.38"/>

    <!-- Pressed state -->
    <item android:state_pressed="true" android:color="?attr/colorPrimary"/>

    <!-- Selected state -->
    <item android:state_selected="true" android:color="?attr/colorPrimary"/>

    <!-- Activated state -->
    <item android:state_activated="true" android:color="?attr/colorPrimary"/>

    <!-- Checked state -->
    <item android:state_checked="true" android:color="?attr/colorPrimary"/>
</selector>
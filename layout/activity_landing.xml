<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:background="@drawable/splash_gradient"
    tools:context=".LandingActivity">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@id/copyrightFooter">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="2dp">
    <GridLayout
        android:id="@+id/Gridlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:layout_margin="3dp"
        android:columnCount="2"
        android:rowCount="2">


    <androidx.cardview.widget.CardView
        android:id="@+id/bilgatedtelogo"
        android:layout_width="30dp"
        android:layout_height="129dp"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:padding="16dp"
        android:layout_columnWeight="1"
        android:background="@drawable/circle"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="40dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/img_2" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/uoelogo"
        android:layout_width="30dp"
        android:layout_height="129dp"
        android:layout_marginStart="80dp"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:background="@drawable/circle"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="40dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@mipmap/img"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </GridLayout>

</RelativeLayout>
            <!-- Main Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C-LaSAIR Initiative"
                android:textColor="#FFD700"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="20dp"/>

            <!-- Brief Summary -->
            <TextView
                android:id="@+id/summaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:lineSpacingExtra="4dp"/>

            <!-- Counties List -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Implemented in:"
                android:textColor="#FFD700"
                android:textSize="18sp"
                android:layout_marginTop="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Turkana"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Elgeyo-Marakwet"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Kisumu"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Proceed Button -->
            <Button
                android:id="@+id/proceedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROCEED"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_gradient"
                android:layout_marginTop="40dp"
                android:elevation="8dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Copyright Footer -->
    <TextView
        android:id="@+id/copyrightFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Â© 2024 C-LaSAIR Initiative. All Rights Reserved."
        android:textColor="#80FFFFFF"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:background="#80000000"/>
</RelativeLayout>